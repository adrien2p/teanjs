{
  "globals": {
    "ts-jest": {
      "tsConfig": "client/tsconfig.spec.json"
    }
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testMatch": ["**/client/**/?(*.)+(spec|test).[jt]s" ],
  "collectCoverageFrom" : ["./**/*.{js,jsx,tsx,ts}", "!**/node_modules/**", "!**/vendor/**"],
  "coverageReporters": ["json", "lcov"]
}
